							"const response = pm.response.json();",
							"pm.test(\"Current stock of this book should be more than 0\", () => {",
							"    pm.expect(response['current-stock']).greaterThan(0);",
							"})",
							"",
							"pm.test(\"This book is available to order\", ()=>{",
							"    pm.expect(response.available).to.eqls(true);",
